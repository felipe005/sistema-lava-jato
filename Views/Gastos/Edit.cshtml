@model GastoProduto
@{
    ViewData["Title"] = "Editar gasto";
}

<h2>Editar gasto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Produto" class="form-label"></label>
            <input asp-for="Produto" class="form-control" />
            <span asp-validation-for="Produto" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Quantidade" class="form-label"></label>
            <input asp-for="Quantidade" class="form-control" type="number" min="1" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="ValorUnitario" class="form-label">Valor unit√°rio</label>
            <input asp-for="ValorUnitario" class="form-control" type="number" min="0" step="0.01" />
            <span asp-validation-for="ValorUnitario" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Data" class="form-label"></label>
            <input asp-for="Data" class="form-control" type="datetime-local" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="col-md-12 mb-3">
            <label asp-for="Observacoes" class="form-label"></label>
            <textarea asp-for="Observacoes" class="form-control"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
