@model GastoProduto
@{
    ViewData["Title"] = "Detalhes do gasto";
}

<h2>Detalhes do gasto</h2>

<dl class="row">
    <dt class="col-sm-3">Produto</dt>
    <dd class="col-sm-9">@Model.Produto</dd>

    <dt class="col-sm-3">Quantidade</dt>
    <dd class="col-sm-9">@Model.Quantidade</dd>

    <dt class="col-sm-3">Valor unitário</dt>
    <dd class="col-sm-9">@Model.ValorUnitario.ToString("C")</dd>

    <dt class="col-sm-3">Total</dt>
    <dd class="col-sm-9">@Model.Total.ToString("C")</dd>

    <dt class="col-sm-3">Data</dt>
    <dd class="col-sm-9">@Model.Data.ToString("dd/MM/yyyy HH:mm")</dd>

    <dt class="col-sm-3">Observações</dt>
    <dd class="col-sm-9">@Model.Observacoes</dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Voltar</a>
