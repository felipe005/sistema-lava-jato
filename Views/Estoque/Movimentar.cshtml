@model MovimentacaoEstoque
@{
    ViewData["Title"] = "Movimentar estoque";
    var produto = ViewData["Produto"] as ProdutoEstoque;
}

<h2>Movimentar estoque</h2>

@if (produto is not null)
{
    <div class="mb-3"><strong>@produto.Nome</strong> (Qtd atual: @produto.QuantidadeAtual)</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Movimentar" method="post">
    <input type="hidden" asp-for="ProdutoEstoqueId" />
    <div class="row">
        <div class="col-md-3 mb-3">
            <label asp-for="Tipo" class="form-label"></label>
            <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoMovimentacaoEstoque>()" class="form-select"></select>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Quantidade" class="form-label"></label>
            <input asp-for="Quantidade" class="form-control" type="number" min="1" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Data" class="form-label"></label>
            <input asp-for="Data" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-12 mb-3">
            <label asp-for="Observacoes" class="form-label"></label>
            <textarea asp-for="Observacoes" class="form-control"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
