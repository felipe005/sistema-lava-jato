@model IEnumerable<ProdutoEstoque>
@{
    ViewData["Title"] = "Estoque";
    var alertas = ViewData["Alertas"] as List<ProdutoEstoque> ?? new List<ProdutoEstoque>();
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Estoque</h2>
    <a class="btn btn-primary" asp-action="Create">Novo produto</a>
</div>

@if (alertas.Any())
{
    <div class="alert alert-warning">
        <strong>Alerta de baixo estoque:</strong>
        @string.Join(", ", alertas.Select(a => a.Nome))
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Unidade</th>
            <th>Qtd atual</th>
            <th>Qtd minima</th>
            <th>Custo unitario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.QuantidadeAtual <= item.QuantidadeMinima ? "table-warning" : "")">
                <td>@item.Nome</td>
                <td>@item.Unidade</td>
                <td>@item.QuantidadeAtual</td>
                <td>@item.QuantidadeMinima</td>
                <td>@item.CustoUnitario.ToString("C")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Movimentacoes" asp-route-id="@item.Id">Movimentos</a>
                    <a class="btn btn-sm btn-outline-dark" asp-action="Movimentar" asp-route-id="@item.Id">Entrada/Saida</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
