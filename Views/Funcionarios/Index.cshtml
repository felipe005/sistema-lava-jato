@model IEnumerable<Funcionario>
@{
    ViewData["Title"] = "Funcionarios";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Funcionarios</h2>
    <a class="btn btn-primary" asp-action="Create">Novo funcionario</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Salario mensal</th>
            <th>% Comissao</th>
            <th>Ativo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.ApplicationUser?.Email</td>
                <td>@item.Telefone</td>
                <td>@item.SalarioMensal.ToString("C")</td>
                <td>@item.PercentualComissao.ToString("F2")%</td>
                <td>@(item.Ativo ? "Sim" : "Nao")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
