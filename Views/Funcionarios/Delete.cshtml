@model Funcionario
@{
    ViewData["Title"] = "Excluir funcionário";
}

<h2>Excluir funcionário</h2>

<div class="alert alert-warning">
    Tem certeza que deseja excluir este funcionário?
</div>

<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.Nome</dd>
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.ApplicationUser?.Email</dd>
    <dt class="col-sm-3">Salário mensal</dt>
    <dd class="col-sm-9">@Model.SalarioMensal.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>
