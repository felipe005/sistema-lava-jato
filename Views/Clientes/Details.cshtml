@model Cliente
@{
    ViewData["Title"] = "Detalhes do cliente";
}

<h2>Detalhes do cliente</h2>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Nome</dt>
        <dd class="col-sm-9">@Model.Nome</dd>
        <dt class="col-sm-3">CPF</dt>
        <dd class="col-sm-9">@Model.Cpf</dd>
        <dt class="col-sm-3">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
    </dl>
</div>

@if (Model.Veiculos.Any())
{
    <h5>Veículos</h5>
    <ul class="list-group mb-3">
        @foreach (var v in Model.Veiculos)
        {
            <li class="list-group-item">@v.Placa - @v.Modelo</li>
        }
    </ul>
}

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Voltar</a>
