@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Clientes";
    var search = ViewData["Search"] as string ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Clientes</h2>
    <a class="btn btn-primary" asp-action="Create">Novo cliente</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6">
        <input name="q" value="@search" class="form-control" placeholder="Pesquisar por nome, CPF, telefone ou email" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Pesquisar</button>
    </div>
    <div class="col-auto">
        <a class="btn btn-outline-secondary" asp-action="Index">Limpar</a>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Telefone</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Cpf</td>
                <td>@item.Telefone</td>
                <td>@item.Email</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
