@model IEnumerable<Veiculo>
@{
    ViewData["Title"] = "Veículos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Veículos</h2>
    <a class="btn btn-primary" asp-action="Create">Novo veículo</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Placa</th>
            <th>Modelo</th>
            <th>Cliente</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Placa</td>
                <td>@item.Modelo</td>
                <td>@item.Cliente?.Nome</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
