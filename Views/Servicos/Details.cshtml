@model Servico
@{
    ViewData["Title"] = "Detalhes do serviço";
}

<h2>Detalhes do serviço</h2>

<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.Nome</dd>
    <dt class="col-sm-3">Preço</dt>
    <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>
    <dt class="col-sm-3">Descrição</dt>
    <dd class="col-sm-9">@Model.Descricao</dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Voltar</a>
