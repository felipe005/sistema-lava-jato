@model Servico
@{
    ViewData["Title"] = "Editar serviço";
}

<h2>Editar serviço</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Preco" class="form-label"></label>
            <input asp-for="Preco" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="col-md-12 mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
