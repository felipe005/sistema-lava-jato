@model IEnumerable<Agendamento>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data</th>
            <th>Cliente</th>
            <th>Veiculo</th>
            <th>Servico</th>
            <th>Funcionario</th>
            <th>Status</th>
            <th>Inicio</th>
            <th>ETA (min)</th>
            <th>Desconto</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataAgendada.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Cliente?.Nome</td>
                <td>@item.Veiculo?.Placa</td>
                <td>@item.Servico?.Nome</td>
                <td>@item.Funcionario?.Nome</td>
                <td>@item.Status</td>
                <td>@(item.InicioServico.HasValue ? item.InicioServico.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm") : "-")</td>
                <td>@(item.TempoEstimadoMinutos.HasValue ? item.TempoEstimadoMinutos.Value.ToString() : "-")</td>
                <td>@(item.TeveDesconto ? item.ValorDesconto.ToString("C") : "-")</td>
                <td class="text-end">
                    @if (item.InicioServico is null && item.Status != StatusServico.Entregue)
                    {
                        <form asp-action="IniciarServico" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-dark">Iniciar</button>
                        </form>
                    }
                    @if (item.Status != StatusServico.Concluido && item.Status != StatusServico.Entregue)
                    {
                        <form asp-action="Concluir" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-success">Pronto</button>
                        </form>
                    }
                    @if (item.Status != StatusServico.Entregue)
                    {
                        <form asp-action="Entregar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Entregue</button>
                        </form>
                    }
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
