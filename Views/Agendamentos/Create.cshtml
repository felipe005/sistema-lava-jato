@model Agendamento
@{
    ViewData["Title"] = "Novo agendamento";
}

<h2>Novo agendamento</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="ClienteId" class="form-label">Cliente</label>
            <select asp-for="ClienteId" asp-items="ViewBag.ClienteId" class="form-select"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="VeiculoId" class="form-label">Veiculo</label>
            <select asp-for="VeiculoId" asp-items="ViewBag.VeiculoId" class="form-select"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="ServicoId" class="form-label">Servico</label>
            <select asp-for="ServicoId" asp-items="ViewBag.ServicoId" class="form-select"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="FuncionarioId" class="form-label">Funcionario</label>
            <select asp-for="FuncionarioId" asp-items="ViewBag.FuncionarioId" class="form-select">
                <option value="">Selecione</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Cliente (cadastro rapido)</label>
            <input name="novoClienteNome" value="@(ViewData["NovoClienteNome"] ?? "")" class="form-control" placeholder="Nome do cliente" />
            @Html.ValidationMessage("novoClienteNome", null, new { @class = "text-danger" })
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Telefone (cadastro rapido)</label>
            <input name="novoClienteTelefone" value="@(ViewData["NovoClienteTelefone"] ?? "")" class="form-control" placeholder="(11) 99999-9999" />
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Placa (cadastro rapido)</label>
            <input name="novaPlaca" value="@(ViewData["NovaPlaca"] ?? "")" class="form-control" placeholder="ABC-1234" />
            @Html.ValidationMessage("novaPlaca", null, new { @class = "text-danger" })
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="DataAgendada" class="form-label"></label>
            <input asp-for="DataAgendada" class="form-control" type="datetime-local" />
            <span asp-validation-for="DataAgendada" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="TempoEstimadoMinutos" class="form-label">Tempo estimado (min)</label>
            <input asp-for="TempoEstimadoMinutos" class="form-control" type="number" min="0" />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusServico>()" class="form-select"></select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="TeveDesconto" class="form-label">Teve desconto?</label>
            <select asp-for="TeveDesconto" class="form-select">
                <option value="false">Nao</option>
                <option value="true">Sim</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="ValorDesconto" class="form-label">Valor do desconto</label>
            <input asp-for="ValorDesconto" class="form-control" type="number" min="0" step="0.01" />
        </div>
        <div class="col-md-12 mb-3">
            <label asp-for="Observacoes" class="form-label"></label>
            <textarea asp-for="Observacoes" class="form-control"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
